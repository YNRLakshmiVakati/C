#include<stdio.h>
void accept(int a[100],int n);
void display(int b[100],int n);
int main()
{
    int a[100],b[100];
    int n,i;
    printf("Enter the size of the array");
    scanf("%d",&n);
    printf("\nEnter the values into array a \n");
    accept(a,n);
    printf("\nEnter the values into array b \n");
    accept(b,n);
    printf("\nThe values in array a \n");
    display(a,n);
    printf("\nThe vlues in array b \n");
    display(b,n);
    return 0;
}
void accept(int t[100],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        scanf("%d",&t[i]);
    }
}
void display(int t[100],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("%d \t",t[i]);
    }
}
