#include<stdio.h>
int main()
{
    int n,i,sum=0;
    printf("enter any number\n");
    scanf("%d",&n);
    for(i=1;i<=n/2;i++)
    {
        if(n%i==0)
        {
            sum=sum+i;
        }
    }
    if(sum==n)
    {
        printf("The given number is a perfect number");
    }
    else
    {
        printf("The given number is not a perfect number");
    }
}
